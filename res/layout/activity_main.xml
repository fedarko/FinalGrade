<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
	    <TextView
	        android:id="@+id/explanation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:text="@string/explanation" />
	<!-- Q1 -->
	    <TextView
	        android:id="@+id/q1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/explanation"
	        android:text="@string/q1" />    
	    
	    <EditText
	        android:id="@+id/q1EnterText"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/q1"
	        android:maxLength="1"
	        android:ems="10"
	        android:inputType="textNoSuggestions|textVisiblePassword" >
	
	        <requestFocus />
	    </EditText>
	<!-- Q2 -->
	    <TextView
	        android:id="@+id/q2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/explanation"
	        android:text="@string/q2" />    
	    
	    <EditText
	        android:id="@+id/q2EnterText"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/q2"
	        android:maxLength="1"
	        android:ems="10"
	        android:inputType="textNoSuggestions|textVisiblePassword" >
	
	    </EditText>
	<!-- Midterm Exam -->    
	    <TextView
	        android:id="@+id/midterm"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/explanation"
	        android:text="@string/midterm" />    
	    
	    <EditText
	        android:id="@+id/midtermEnterText"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/midterm"
	        android:maxLength="1"
	        android:ems="10"
	        android:inputType="textNoSuggestions|textVisiblePassword" >
	
	    </EditText>
	<!-- Q3 -->
	    <TextView
	        android:id="@+id/q3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/q1EnterText"
	        android:text="@string/q3" />    
	    
	    <EditText
	        android:id="@+id/q3EnterText"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/q3"
	        android:maxLength="1"
	        android:ems="10"
	        android:inputType="textNoSuggestions|textVisiblePassword" >
	
	    </EditText>
	<!-- Q4 -->    
	    <TextView
	        android:id="@+id/q4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/q2EnterText"
	        android:text="@string/q4" />    
	    
	    <EditText
	        android:id="@+id/q4EnterText"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@+id/q4"
	        android:maxLength="1"
	        android:ems="10"
	        android:inputType="textNoSuggestions|textVisiblePassword" >
	
	    </EditText>    
	<!-- Final Exam -->    
	    <TextView
	        android:id="@+id/fin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/midtermEnterText"
	        android:text="@string/fin" />    
	    
	    <EditText
	        android:id="@+id/finEnterText"
	        android:layout_width="50dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/fin"
	        android:maxLength="1"
	        android:ems="10"
	        android:inputType="textNoSuggestions|textVisiblePassword" >
	
	    </EditText>
	
	<!-- Course Length Descriptor/Radio Buttons -->    
	    
	        <TextView
	            android:id="@+id/courseLengthText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/finEnterText"
	        android:layout_alignParentLeft="true"
	        android:text="@string/courseLen" />
        
	        <RadioGroup
	            android:id="@+id/courseLengthRadioButtons"	            
		        android:layout_below="@+id/courseLengthText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:orientation="horizontal" >
	        
		        <RadioButton
		            android:id="@+id/semesterRadioButton"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/semester" />	        
	
		        <RadioButton
		            android:id="@+id/yearRadioButton"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/year"
		            android:checked="true" />	
		                    
	        </RadioGroup>	    
	        
	<!-- Results -->
	        <Button
	            android:id="@+id/calcButton"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/courseLengthRadioButtons"
	            android:layout_alignParentLeft="true"
	            android:text="@string/calcButton"
	            android:onClick="calculateFinalGrade" />
	
	        <TextView
	        android:id="@+id/resultsText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/calcButton"
	        android:layout_alignParentLeft="true"
	        android:text="@string/resultsText" />        
	        
	</RelativeLayout>
</ScrollView>